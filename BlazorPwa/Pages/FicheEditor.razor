@page "/fiches/new"
@page "/fiches/edit/{Id:guid}"
@using BlazorPwa.Models
@using BlazorPwa.Services
@inject StudyService StudyService
@inject NavigationManager NavManager

<div class="editor-container">
    <header class="header">
        <button class="btn btn-ghost" @onclick="GoBack">‚Üê</button>
        <h2>@(Id == null ? "Nouvelle Fiche" : "Modifier")</h2>
        <button class="btn btn-primary btn-sm" @onclick="Save">Enregistrer</button>
    </header>

    <div class="form-group">
        <label>Titre</label>
        <input type="text" class="form-control" @bind="Sheet.Title" placeholder="Ex: Th√©or√®me de Pythagore" />
    </div>

    <div class="form-group">
        <label>Mati√®re</label>
        <select class="form-control" @bind="Sheet.SubjectId">
            @foreach (var s in Subjects)
            {
                <option value="@s.Id">@s.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Th√®me</label>
        <input type="text" class="form-control" @bind="Sheet.Theme" placeholder="Ex: G√©om√©trie" />
    </div>

    <div class="form-group">
        <label>Contenu</label>
        <div class="toolbar">
            <button class="btn btn-ghost btn-icon" @onclick="ScanText">üì∑ Scan</button>
            <button class="btn btn-ghost btn-icon" @onclick="AddImage">üñºÔ∏è Img</button>
        </div>
        <textarea class="form-control content-area" @bind="Sheet.Content" placeholder="Tape ton cours ici..."></textarea>
    </div>
</div>

@code {
    [Parameter] public Guid? Id { get; set; }

    private RevisionSheet Sheet = new();
    private List<Subject> Subjects = new();

    protected override void OnInitialized()
    {
        Subjects = StudyService.GetSubjects();
        if (Id.HasValue)
        {
            var existing = StudyService.GetSheets().FirstOrDefault(s => s.Id == Id.Value);
            if (existing != null)
            {
                Sheet = existing; // Should clone in real app
            }
        }
        else
        {
            Sheet.SubjectId = Subjects.FirstOrDefault()?.Id ?? string.Empty;
        }
    }

    private void Save()
    {
        if (!Id.HasValue)
        {
            StudyService.AddSheet(Sheet);
        }
        // Edit updates reference directly in mock service
        NavManager.NavigateTo("/fiches");
    }

    private void GoBack()
    {
        NavManager.NavigateTo("/fiches");
    }

    private void ScanText()
    {
        // Mock functionality
        Sheet.Content += "\n[Texte scann√© depuis la cam√©ra...]";
    }

    private void AddImage()
    {
        // Mock functionality
        Sheet.Content += "\n[Image ajout√©e]";
    }
}

