@page "/"
@inject BlazorPwa.Services.StudyService StudyService
@inject NavigationManager NavManager

<div class="animate-fade-in">
    <header style="margin-bottom: 2rem;">
        <h1 style="font-size: 2rem; margin-bottom: 0.5rem; border: 0px solid red;">Bonjour, <span class="text-gradient">Élève</span> 👋</h1>
    </header>

    <h2 style="font-size: 1.25rem; margin-bottom: 1rem;">Matières</h2>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1rem;">
        @foreach (var subject in StudyService.GetSubjects())
        {
            <div class="card" style="cursor: pointer; border-left: 4px solid @subject.Color; display: flex; flex-direction: column; align-items: flex-start;" @onclick="() => OpenSubject(subject.Id)">
                <div style="font-size: 2.5rem; margin-bottom: 0.5rem;">@subject.Icon</div>
                <h3 style="font-size: 1.1rem; margin-bottom: 0.25rem;">@subject.Name</h3>
                <p style="font-size: 0.875rem; color: var(--text-secondary);">@GetFlashcardCount(subject.Id) cartes</p>
            </div>
        }
    </div>

    <h2 style="font-size: 1.25rem; margin: 2rem 0 1rem;">Révisions rapides</h2>
    
    <div class="card" style="background: var(--gradient-surface);">
        <div class="card-header">
            <div class="card-icon">⚡</div>
            <div>
                <h3 class="card-title">Quiz Aléatoire</h3>
                <p style="font-size: 0.875rem; color: var(--text-secondary);">Teste tes connaissances sur toutes les matières</p>
            </div>
        </div>
        <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;" @onclick="StartRandomQuiz">
            Commencer
        </button>
    </div>
</div>

@code {
    private void OpenSubject(Guid id)
    {
        NavManager.NavigateTo($"fiches?subjectId={id}");
    }

    private void StartRandomQuiz()
    {
        NavManager.NavigateTo("quiz");
    }

    private int GetFlashcardCount(Guid subjectId)
    {
        return StudyService.GetFlashcards(subjectId).Count;
    }
}
