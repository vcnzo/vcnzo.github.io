@page "/"
@inject BlazorPwa.Services.StudyService StudyService
@inject NavigationManager NavManager

<div class="animate-fade-in">
    <header style="margin-bottom: 2rem;">
        <h1 style="font-size: 2rem; margin-bottom: 0.5rem; border: 0px solid red;">Bonjour, <span class="text-gradient">Élève</span> 👋</h1>
    </header>

    <h2 style="font-size: 1.25rem; margin-bottom: 1rem;">Matières</h2>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem;">
        @foreach (var subject in HardcodedSubjects)
        {
            <div class="card" style="cursor: pointer; border-left: 4px solid @subject.Color; display: flex; flex-direction: row; align-items: center; padding: 1rem; margin-bottom: 0; gap: 1rem;" @onclick="() => OpenSubject(subject.Id)">
                <div style="font-size: 2rem;">@subject.Icon</div>
                <div>
                    <h3 style="font-size: 1.1rem; margin: 0; font-weight: 600;">@subject.Name</h3>
                    <p style="font-size: 0.85rem; color: var(--text-secondary); margin: 0;">@GetFlashcardCount(subject.Id) cartes</p>
                </div>
            </div>
        }
    </div>

    <h2 style="font-size: 1.25rem; margin: 2rem 0 1rem;">Révisions rapides</h2>
    
    <div class="card" style="background: var(--gradient-surface);">
        <div class="card-header">
            <div class="card-icon">⚡</div>
            <div>
                <h3 class="card-title">Quiz Aléatoire</h3>
                <p style="font-size: 0.875rem; color: var(--text-secondary);">Teste tes connaissances sur toutes les matières</p>
            </div>
        </div>
        <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;" @onclick="StartRandomQuiz">
            Commencer
        </button>
    </div>
</div>

@implements IDisposable

@code {
    private static readonly List<BlazorPwa.Models.Subject> HardcodedSubjects = new()
    {
        new() { Id = "math-5eme", Name = "Maths", Color = "#3B82F6", Icon = "📐" },
        new() { Id = "hist-5eme", Name = "Histoire", Color = "#D97706", Icon = "🏛️" },
        new() { Id = "fr-5eme", Name = "Français", Color = "#EC4899", Icon = "📚" },
        new() { Id = "svt-5eme", Name = "SVT", Color = "#10B981", Icon = "🧬" }
    };

    protected override void OnInitialized()
    {
        StudyService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        StudyService.OnChange -= StateHasChanged;
    }

    private void OpenSubject(string id)
    {
        NavManager.NavigateTo($"fiches?subjectId={id}");
    }

    private void StartRandomQuiz()
    {
        NavManager.NavigateTo("quiz");
    }

    private int GetFlashcardCount(string subjectId)
    {
        // If service is not ready or subject not found, return 0
        var cards = StudyService.GetFlashcards(subjectId);
        return cards?.Count ?? 0;
    }
}
